---
import PageLayout from '../../layouts/PageLayout.astro';
import PostCard from '../../components/PostCard.astro';
import GitHubIcon from '../../components/icons/GitHubIcon.astro';
import LinkedInIcon from '../../components/icons/LinkedInIcon.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime()
);
---

<PageLayout title="Blog" description="TheRivetedRose blog â€” technical writing and notes">
  <div class="mx-auto max-w-5xl px-4 py-12 sm:px-6 lg:px-8">
    <h1 class="section-heading mb-8">Blog</h1>
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {posts.map((post) => (
        <PostCard
          slug={post.slug}
          title={post.data.title}
          summary={post.data.summary}
          pubDate={post.data.pubDate}
          tags={post.data.tags}
        />
      ))}
    </div>
    <section class="mt-16 border-t border-border pt-12">
      <h2 class="section-heading mb-4">Connect</h2>
      <p class="mb-4 text-muted">Find me on GitHub and LinkedIn.</p>
      <div class="flex flex-wrap gap-4">
        <a
          href="https://github.com/therivetedrose"
          class="btn-github"
          target="_blank"
          rel="noopener noreferrer"
        >
          <GitHubIcon size={18} />
          GitHub
        </a>
        <a
          href="https://www.linkedin.com/in/rosefr"
          class="btn-linkedin"
          target="_blank"
          rel="noopener noreferrer"
        >
          <LinkedInIcon size={18} />
          LinkedIn
        </a>
      </div>
    </section>
  </div>
</PageLayout>
