---
import PageLayout from '../../layouts/PageLayout.astro';
import ProjectCard from '../../components/ProjectCard.astro';
import ProjectFilter from '../../components/ProjectFilter.astro';
import GitHubIcon from '../../components/icons/GitHubIcon.astro';
import LinkedInIcon from '../../components/icons/LinkedInIcon.astro';
import { getCollection } from 'astro:content';

const projects = (await getCollection('projects')).sort((a, b) => {
  const aDate = a.data.pubDate?.getTime() ?? 0;
  const bDate = b.data.pubDate?.getTime() ?? 0;
  return bDate - aDate;
});
const allTags = [...new Set(projects.flatMap((p) => p.data.tags))].sort();
---

<PageLayout title="Projects" description="TheRivetedRose projects â€” security labs, architecture, and technical work">
  <div class="mx-auto max-w-5xl px-4 py-12 sm:px-6 lg:px-8">
    <h1 class="section-heading mb-8">Projects</h1>
    <ProjectFilter client:load tags={allTags} />
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3" data-project-grid>
      {projects.map((project) => (
        <ProjectCard
          slug={project.slug}
          title={project.data.title}
          summary={project.data.summary}
          tags={project.data.tags}
          featured={project.data.featured}
        />
      ))}
    </div>
    <section class="mt-16 border-t border-border pt-12">
      <h2 class="section-heading mb-4">Connect</h2>
      <p class="mb-4 text-muted">Find me on GitHub and LinkedIn.</p>
      <div class="flex flex-wrap gap-4">
        <a
          href="https://github.com/therivetedrose"
          class="btn-github"
          target="_blank"
          rel="noopener noreferrer"
        >
          <GitHubIcon size={18} />
          GitHub
        </a>
        <a
          href="https://www.linkedin.com/in/rosefr"
          class="btn-linkedin"
          target="_blank"
          rel="noopener noreferrer"
        >
          <LinkedInIcon size={18} />
          LinkedIn
        </a>
      </div>
    </section>
  </div>
</PageLayout>
