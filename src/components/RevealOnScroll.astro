---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={['reveal', className]} data-reveal>
  <slot />
</div>

<script>
  (function initReveal() {
    if (typeof window === 'undefined') return;
    if (document.documentElement.hasAttribute('data-reveal-init')) return;
    document.documentElement.setAttribute('data-reveal-init', '');

    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    if (prefersReducedMotion) {
      document.querySelectorAll('[data-reveal]').forEach((el) => el.classList.add('reveal--visible'));
      return;
    }

    let lastScrollY = window.scrollY;
    let scrollDirection = 'down';

    window.addEventListener(
      'scroll',
      () => {
        const y = window.scrollY;
        scrollDirection = y > lastScrollY ? 'down' : 'up';
        lastScrollY = y;
      },
      { passive: true }
    );

    function revealElement(el: Element) {
      const alreadyRevealed = el.hasAttribute('data-revealed');
      const htmlEl = el as HTMLElement & { _revealExitHandler?: () => void };
      if (htmlEl._revealExitHandler) {
        htmlEl.removeEventListener('transitionend', htmlEl._revealExitHandler);
        htmlEl._revealExitHandler = undefined;
      }
      el.classList.remove('reveal--animate-up', 'reveal--animate-down', 'reveal--animate-up-subtle', 'reveal--animate-down-subtle', 'reveal--exit-up', 'reveal--exit-down');
      el.classList.add('reveal--visible');
      const rect = el.getBoundingClientRect();
      const viewportMid = window.innerHeight / 2;
      const isEnteringFromTop = rect.top < viewportMid;
      const isScrollingDown = !isEnteringFromTop;
      if (!alreadyRevealed) {
        const animateClass = isScrollingDown ? 'reveal--animate-up' : 'reveal--animate-down';
        el.classList.add(animateClass);
        el.setAttribute('data-revealed', '');
      } else {
        const subtleClass = isScrollingDown ? 'reveal--animate-up-subtle' : 'reveal--animate-down-subtle';
        el.classList.remove(subtleClass);
        void el.getBoundingClientRect();
        el.classList.add(subtleClass);
      }
    }

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            revealElement(entry.target);
          } else {
            entry.target.classList.remove('reveal--visible', 'reveal--animate-up', 'reveal--animate-down', 'reveal--animate-up-subtle', 'reveal--animate-down-subtle');
            const exitClass = scrollDirection === 'down' ? 'reveal--exit-up' : 'reveal--exit-down';
            entry.target.classList.add(exitClass);

            const el = entry.target as HTMLElement & { _revealExitHandler?: () => void };
            const handler = () => {
              el.removeEventListener('transitionend', handler);
              el._revealExitHandler = undefined;
              el.classList.remove('reveal--exit-up', 'reveal--exit-down');
            };
            el._revealExitHandler = handler;
            el.addEventListener('transitionend', handler);
          }
        });
      },
      { root: null, threshold: 0.01, rootMargin: '0px 0px 150px 0px' }
    );

    const revealElements = document.querySelectorAll('[data-reveal]');
    revealElements.forEach((el) => observer.observe(el));

    /* Mobile Safari fallback: IntersectionObserver can be unreliable on iOS. On scroll, manually check visibility. */
    let scrollFallbackScheduled = false;
    function checkRevealOnScroll() {
      if (scrollFallbackScheduled) return;
      scrollFallbackScheduled = true;
      requestAnimationFrame(() => {
        scrollFallbackScheduled = false;
        const vh = window.innerHeight;
        const triggerBottom = vh + 150;
        revealElements.forEach((el) => {
          if (el.classList.contains('reveal--visible')) return;
          const rect = el.getBoundingClientRect();
          if (rect.bottom > 0 && rect.top < triggerBottom) {
            revealElement(el);
          }
        });
      });
    }
    window.addEventListener('scroll', checkRevealOnScroll, { passive: true });
    /* Initial check after layout - handles mobile Safari when elements are in view on load */
    requestAnimationFrame(() => setTimeout(checkRevealOnScroll, 100));
  })();
</script>
