---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/about/', label: 'About' },
  { href: '/projects/', label: 'Projects' },
  { href: '/blog/', label: 'Blog' },
];

const currentPath = Astro.url.pathname;
---

<nav class="sticky top-0 z-50 border-b border-border bg-surface/95 backdrop-blur supports-[backdrop-filter]:bg-surface/80" aria-label="Main navigation">
  <div class="mx-auto flex max-w-5xl items-center justify-between px-4 py-4 sm:px-6 lg:px-8">
    <a href="/" class="text-lg font-semibold text-[rgb(var(--c-text))] hover:text-accent">
      TheRivetedRose
    </a>
    <ul class="flex gap-6" role="list">
      {navLinks.map((link) => {
        const isActive = currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href));
        return (
          <li>
            <a
              href={link.href}
              class={`text-sm font-medium transition-colors hover:text-accent ${isActive ? 'text-accent' : 'text-muted'}`}
            >
              {link.label}
            </a>
          </li>
        );
      })}
    </ul>
  </div>
</nav>
