---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div
  class={`banner-wip ${className ?? ""}`.trim()}
  role="status"
  aria-live="polite"
>
  <span class="banner-wip__icon" aria-hidden="true">⚠</span>
  <span class="banner-wip__text"
    >Work in progress — content subject to change</span
  >
</div>
