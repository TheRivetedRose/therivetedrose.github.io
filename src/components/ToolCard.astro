---
interface Props {
  name: string;
  path: string;
  color: string;
  variant?: "language" | "platform" | "tool";
}

const { name, path, color, variant = "tool" } = Astro.props;
const cardClass =
  variant === "language"
    ? "language-card"
    : variant === "platform"
      ? "platform-card"
      : "tool-card";
---

<div
  class={`${cardClass} flex min-h-[88px] flex-col items-center justify-center gap-2 rounded-xl border border-border bg-surface-elevated p-4 transition-shadow hover:shadow-md`}
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24"
    fill={`#${color}`}
    class="h-7 w-7 shrink-0"
    aria-hidden="true"
  >
    <path d={path} />
  </svg>
  <span class="text-center text-sm font-medium text-[rgb(var(--c-text))]">
    {name}
  </span>
</div>
