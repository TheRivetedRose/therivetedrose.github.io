---
import RevealOnScroll from './RevealOnScroll.astro';

interface Props {
  slug: string;
  title: string;
  summary: string;
  tags: string[];
  featured?: boolean;
}

const { slug, title, summary, tags, featured = false } = Astro.props;
const href = `/projects/${slug}/`;
---

<RevealOnScroll>
  <a
    href={href}
    class="card block text-left transition-transform hover:-translate-y-0.5"
    data-project-card
    data-tags={tags.join(',')}
  >
    {featured && (
      <span class="badge mb-3 border-accent/30 bg-accent/10 text-accent">Featured</span>
    )}
    <h3 class="mb-2 text-lg font-semibold text-[rgb(var(--c-text))]">{title}</h3>
    <p class="mb-4 text-sm text-muted line-clamp-2">{summary}</p>
    <div class="flex flex-wrap gap-2">
      {tags.map((tag) => (
        <span class="badge">{tag}</span>
      ))}
    </div>
  </a>
</RevealOnScroll>
