<style>
  .theme-icon-light { display: block; }
  .theme-icon-dark { display: none; }
  .dark .theme-icon-light { display: none !important; }
  .dark .theme-icon-dark { display: block !important; }
</style>

<button
  type="button"
  id="theme-toggle"
  aria-label="Toggle dark mode"
  class="fixed bottom-6 right-6 z-50 rounded-full border border-border bg-surface-elevated p-2.5 shadow-lg transition-colors hover:bg-surface focus:outline-none focus:ring-2 focus:ring-rosie-red"
>
  <span class="theme-icon-light" aria-hidden="true">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <circle cx="12" cy="12" r="4" />
      <path d="M12 2v2M12 20v2M4.93 4.93l1.41 1.41M17.66 17.66l1.41 1.41M2 12h2M20 12h2M6.34 17.66l-1.41 1.41M19.07 4.93l-1.41 1.41" />
    </svg>
  </span>
  <span class="theme-icon-dark hidden" aria-hidden="true">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z" />
    </svg>
  </span>
</button>

<script>
  (function initTheme() {
    const storageKey = 'theme';
    const toggle = document.getElementById('theme-toggle');
    const iconLight = document.querySelector('.theme-icon-light');
    const iconDark = document.querySelector('.theme-icon-dark');

    function getPreferredTheme(): 'dark' | 'light' {
      const stored = localStorage.getItem(storageKey) as 'dark' | 'light' | null;
      if (stored) return stored;
      return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
    }

    function setTheme(theme: 'dark' | 'light') {
      document.documentElement.classList.toggle('dark', theme === 'dark');
      localStorage.setItem(storageKey, theme);
      if (iconLight && iconDark) {
        iconLight.classList.toggle('hidden', theme === 'dark');
        iconDark.classList.toggle('hidden', theme === 'light');
      }
    }

    setTheme(getPreferredTheme());

    toggle?.addEventListener('click', () => {
      const current = document.documentElement.classList.contains('dark') ? 'dark' : 'light';
      setTheme(current === 'dark' ? 'light' : 'dark');
    });

    window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
      if (!localStorage.getItem(storageKey)) setTheme(e.matches ? 'dark' : 'light');
    });
  })();
</script>
