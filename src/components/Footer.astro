---
import GitHubIcon from "./icons/GitHubIcon.astro";
import LinkedInIcon from "./icons/LinkedInIcon.astro";

const currentYear = new Date().getFullYear();
---

<footer class="border-t border-rosie-navy/30 bg-surface-elevated">
  <div class="polka-strip" aria-hidden="true"></div>
  <div class="mx-auto max-w-5xl px-4 py-8 sm:px-6 lg:px-8">
    <div class="flex flex-col items-center justify-between gap-4 sm:flex-row">
      <p class="text-sm text-muted">
        Â© {currentYear} TheRivetedRose. No trackers. Built with Astro.
      </p>
      <div class="polka-strip w-full max-w-xs sm:hidden" aria-hidden="true"></div>
      <div class="polka-strip-vertical hidden sm:block" aria-hidden="true"></div>
      <div class="flex items-center gap-6">
        <a
          href="https://github.com/therivetedrose"
          class="flex items-center gap-1.5 text-sm text-muted transition-colors hover:text-[rgb(var(--c-github))]"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="GitHub"
        >
          <GitHubIcon size={18} />
          GitHub
        </a>
        <a
          href="https://www.linkedin.com/in/rosefr"
          class="flex items-center gap-1.5 text-sm text-muted transition-colors hover:text-[rgb(var(--c-linkedin))]"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="LinkedIn"
        >
          <LinkedInIcon size={18} />
          LinkedIn
        </a>
      </div>
    </div>
  </div>
</footer>
